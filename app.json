{
  "expo": {
    "name": "VideoDiaryApp",
    "slug": "VideoDiaryApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "videodiaryapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Fotoğraf ve video kütüphanesine erişmek için izin gereklidir",
        "NSCameraUsageDescription": "Kamera erişimi için izin gereklidir",
        "NSMicrophoneUsageDescription": "Mikrofon erişimi için izin gereklidir"
      },
      "bundleIdentifier": "com.psynexa.VideoDiaryApp"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/appicon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.psynexa.VideoDiaryApp"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "Fotoğraf erişimi için izin gereklidir",
          "cameraPermission": "Kamera erişimi için izin gereklidir"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
